# Database (Railway PostgreSQL) - OBRIGATÓRIO
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Authentication - OBRIGATÓRIO
JWT_SECRET=your_secret_key_here

# Cloudflare R2 (Video Storage) - OBRIGATÓRIO
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Resend (Email Notifications) - OPCIONAL
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Server Configuration - OPCIONAL (tem valores padrão)
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# FFmpeg (should be installed on system) - OPCIONAL
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
