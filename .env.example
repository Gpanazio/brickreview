# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Authentication
JWT_SECRET=your-secret-key-here-generate-with-openssl

# Cloudflare R2 (Video Storage) - Primary Bucket
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=brickreview-videos
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Cloudflare R2 - Secondary Bucket (Optional)
R2_SECONDARY_ACCOUNT_ID=your-secondary-cloudflare-account-id
R2_SECONDARY_ACCESS_KEY_ID=your-secondary-r2-access-key
R2_SECONDARY_SECRET_ACCESS_KEY=your-secondary-r2-secret-access-key
R2_SECONDARY_BUCKET_NAME=brickreview-videos-secondary
R2_SECONDARY_PUBLIC_URL=https://pub-yyyyy.r2.dev

# R2 Storage Limits (in bytes, Cloudflare Free Plan = 10GB per bucket)
R2_PRIMARY_LIMIT=10737418240
R2_SECONDARY_LIMIT=10737418240

# Resend (Email Notifications)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Server Configuration
PORT=3002
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# FFmpeg (should be installed on system)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
