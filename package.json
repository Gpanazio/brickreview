{
  "name": "brickreview",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Sistema de revisão de vídeos estilo Frame.io com identidade visual BRICK",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "server": "nodemon server/index.js",
    "worker": "node server/queue/worker.js",
    "worker:production": "node server/queue/worker.js",
    "build": "vite build",
    "start": "chmod +x railway-start.sh && ./railway-start.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test tests/e2e/smoke.spec.js",
    "test:load": "artillery run load-test.yml",
    "test:load:full": "artillery run load-test-full.yml"
